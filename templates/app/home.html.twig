{% extends 'base.html.twig' %}

{% block main %}
    <div class="content">
        <h2>This is the home page.</h2>
        <p>Not much stuff going on tbh fam. But if you are interested please check out an article below.</p>
    </div>

    {% for article in articles %}
        <div class="box">
            <a href="{{ path('article_show', { slug: article.slug }) }}">
                <div class="columns is-vcentered">
                    <div class="column is-one-fifth">
                        <figure class="image is-4by3">
                            <img src="{{ article.imageFilename }}" alt="Main Article Photo">
                        </figure>
                    </div>
                    <div class="column">
                        <article class="media">
                            <figure class="media-left">
                                <p class="image is-64x64">
                                    <img src="https://bulma.io/images/placeholders/128x128.png" alt="Author Icon Photo">
                                </p>
                            </figure>
                            <div class="media-content">
                                <div class="content">
                                    <h2>{{ article.title }}</h2>
                                    <p>
                                        <strong>{{ article.author }}</strong>
                                        <small>@johnsmith</small>
                                        <small>{{ article.publishedAt ? article.publishedAt|ago : '' }}</small>
                                    </p>
                                </div>
                            </div>
                        </article>
                    </div>
                </div>
            </a>
        </div>
    {% endfor %}
{% endblock %}