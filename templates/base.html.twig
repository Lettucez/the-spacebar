{% set box = article is defined ? '' : 'box' %}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}Welcome to the Space Bar{% endblock %}</title>
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body>

{% block nav %}
    {{ include('layout/navbar/navbar.html.twig') }}
{% endblock %}

{% block hero %}
    {{ include('layout/hero/hero.html.twig') }}
{% endblock %}

<div class="section has-background-light">
    <div class="container">
        <div class="columns">
            <div class="column">
                <div class="{{ box }}">
                    {% block main %}
                    {% endblock %}
                </div>
            </div>
        </div>
    </div>
</div>

{% block footer %}
    {{ include('layout/footer/footer.html.twig') }}
{% endblock %}

{% block javascripts %}
    {{ encore_entry_script_tags('app') }}
{% endblock %}
</body>
</html>
